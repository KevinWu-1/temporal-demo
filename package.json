{
  "name": "demo-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "install-all": "npm install --prefix ./ && npm install --prefix ./apps/service && npm install --prefix ./apps/worker && npm install --prefix ./apps/widget && npm install --prefix ./packages/activities && npm install --prefix ./packages/workflows && npm run install-long",
    "install-long": "npm install --prefix ./packages/workflows/node_modules/@temporalio/common && npm install --prefix ./apps/service/node_modules/@temporalio/common",
    "temporal": "temporal server start-dev --namespace default",
    "worker": "cd ./apps/worker && npm run worker.watch",
    "service": "cd ./apps/service && npm run service.watch",
    "widget": "cd ./apps/widget && npm run start",
    "temporal-persist": "temporal server start-dev --namespace default --db-filename temporal.db"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "turbo": "^1.11.3",
    "vercel": "^29.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
